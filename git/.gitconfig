[core]
	autocrlf = input
	quotepath = false
[init]
	defaultBranch = main
[url "git@github.com:"]
	insteadOf = https://github.com
[color]
	ui = auto
[apply]
	whitespace = nowarn
[pull]
	ff = only
[push]
	default = nothing
; ------------------------------------------------------------
; User-specific configuration (name, email, signing key, etc.)
; should be placed in ~/.gitconfig.local.
;
; To create it, copy the template:
;   cp ~/dotfiles/bash/.gitconfig.local.template ~/.gitconfig.local
;
; ~/.gitconfig.local is not tracked by git on purpose.
; ------------------------------------------------------------
[include]
	path = ~/.gitconfig.local
